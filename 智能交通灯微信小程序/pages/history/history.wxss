/* pages/history/history.wxss */

/* 修改.container全局背景 */

.container {
    position: relative;
    min-height: 100vh;
    background: url('/images/bg1.jpg') center/cover no-repeat;
    background-size: cover;
    background-attachment: scroll;
    /* 新增保障性样式 */
    background-color: rgba(255,255,255,0.5); /* 半透明白色遮罩 */
    z-index: 2;
}
/* 增加图片加载检测 */
.container::before {
    content: '背景加载中...';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    display: none; /* 正常情况隐藏 */
}
.container[data-bg-error]::before {
    display: block; /* 图片加载失败时显示 */
}

  
  .title {
    font-size: 36rpx;
    text-align: center;
    margin: 30rpx 0;
    font-weight: bold;
  }
  
  /* 路口选择样式 */
/* 列表区域添加半透明遮罩 */
.list {
    height: 80vh;
    background: rgba(255,255,255,0.85); /* 新增半透明背景 */
    border-radius: 12rpx;
    overflow: hidden; /* 确保圆角效果 */
}
/* 列表项添加装饰性背景 */
.item {
    padding: 30rpx;
    margin: 15rpx 0;
    background: #fff url('/images/bg1.jpg') right bottom/80rpx no-repeat; /* 复合背景 */
    border-radius: 8rpx;
    box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05); /* 提升可读性 */
    font-weight: bold;
}


  
  /* 数据展示样式 */
  .data-view {
    padding: 20rpx;
  }
  .record {
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    margin-bottom: 20rpx;
    background: #fff;
  }
  .time {
    color: #f00;
    font-size: 28rpx;
  }
  .flow-value {
    font-size: 48rpx;
    text-align: center;
