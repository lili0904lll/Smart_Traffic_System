/* 查询类型选择按钮统一设置 */
button[data-type] {
    margin: 20rpx 0;
    width: 80%;
    border-radius: 50rpx;
    transition: all 0.3s;
}

/* 事故记录按钮 */
button[data-type="accident"] {
    background-color: red !important; /* 警示红 */
    color: white;
    border: 2rpx solid red;
    font-weight: bold;
}

/* 平均车流量按钮 */
button[data-type="avgFlow"] {
    background-color: white !important; 
    color: black;
    border: 2rpx solid white;
    font-weight: bold;
}

/* 车流高峰按钮 */
button[data-type="peakFlow"] {
    background-color: white !important; /* 科技蓝 */
    color: black;
    border: 2rpx solid white;
    font-weight: bold;
}

/* 按钮点击态 */
button[data-type]:active {
    opacity: 0.9;
    transform: scale(0.98);
}

/* 文字加粗 */
button[data-type] text {
    font-weight: bold;
}
