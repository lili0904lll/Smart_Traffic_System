  /* 图表容器样式 */
  .chart-title {
    font-size: 32rpx;
    color: #0b54a1;
    margin: 40rpx 0 15rpx;
    padding-left: 15rpx;
    border-left: 6rpx solid #0b54a1;
  }
  
  /* 修改chart-container样式 */
  .chart-container {
    width: 100%;
    height: 500rpx; /* 增加高度 */
    background: #fff;
    border-radius: 12rpx;
    padding: 30rpx 20rpx; /* 增加内边距 */
    box-sizing: border-box;
    margin: 20rpx 0;
  }
  
  /* 新增坐标轴标签样式 */
  .chart-label {
    font-size: 24rpx;
    color: #666;
  }
