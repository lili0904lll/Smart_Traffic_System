  .section-header {
    display: flex;
    align-items: center;
    margin: 30rpx 0 15rpx;
    font-size: 30rpx;
    color: #333;
    font-weight: bold;
  }
  
  .section-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 15rpx;
    
  }
  
  .chart-legend {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    z-index: 10;
    background: rgba(255,255,255,0.9);
    padding: 15rpx;
    border-radius: 8rpx;
    box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
  }
  
  .legend-item {
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
  }
  
  .legend-color {
    width: 30rpx;
    height: 30rpx;
    border-radius: 4rpx;
    margin-right: 10rpx;
  }
  
  .chart-note {
    font-size: 24rpx;
    color: #999;
    display: block;
    text-align: right;
  }
  
  .axis-label {
    position: absolute;
    font-size: 24rpx;
    color: #666;
    bottom: 10rpx;
    left: 50%;
    transform: translateX(-50%);
  }
  
  .y-axis {
    transform: rotate(-90deg);
    transform-origin: left;
    left: 15rpx;
    bottom: auto;
    top: 50%;
  }
  
  .action-buttons {
    display: flex;
    justify-content: space-between;
    margin-top: 40rpx;
  }
  
  .btn-icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
    vertical-align: middle;
  }
  .record-header {
    display: flex;
    padding: 20rpx;
