.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    background: #f5f7fa;
  }
  
  input {
    width: 80%;
    margin: 12px 0;
    padding: 12px;
    border: 1px solid #dcdfe6;
    border-radius: 6px;
    font-size: 16px;
    background: #fff;
  }
  
  button {
    width: 80%;
    margin-top: 20px;
    padding: 12px 0;
    background: #388e3c;
    color: #fff;
    font-size: 16px;
    border-radius: 6px;
    border: none;
  }