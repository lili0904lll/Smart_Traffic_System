/* pages/index/index.wxss */
.container {
    display: flex;
    flex-direction: column;
    height: 100%;
}
.header {
    flex: 1;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: space-between;
    padding: 10px;
    background-color: #f0f0f0;
    background-image: url('/images/background.jpg');
    background-size: cover;
    background-position: center;
    position: relative;
}
.header .background-image {
    width: 120%;
    height: 150px;
}
.button-group {
    display: flex;
    justify-content: space-around;
    margin-top: -50px;
    margin-bottom: -200px;
    padding: 0;
    z-index: 10;
    margin-left: 340px;
    margin-right: 20px;
    font-weight: bold;
    border-radius: 5px;
}
.button-group button {
    width: 90px;
    height: 50px;
    line-height: 50px;
    padding: 0;
    font-size: 13px;
    background-color: rgba(25, 115, 233, 0);
    color: white;
    border-radius: 5px;
    text-align: center;
    margin-bottom: 20px;
    z-index: 11;
    margin: 0 2px;
    border: 1px solid white;
}
.monitor-area {
    flex: 4;
    padding: 10px;
    background-color: #ffffff;
    height: 600px;
}
/* 新增图像样式 */
.traffic-map-image {
    width: 100%;
    height: 100%;
} 
.sidebar {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 10px;
    background-color: #e0e0e0;
}
.sidebar button {
    margin-bottom: 10px;
    padding: 10px;
    font-size: 14px;
    background-color: #0b54a1;
    color: white;
    border-radius: 5px;
}

/* 增加跳转失败提示样式 */
.error-modal {
    background-color: #ff4444 !important;
  }
  
  .error-modal .weui-modal__hd {
    color: #fff !important;
  }