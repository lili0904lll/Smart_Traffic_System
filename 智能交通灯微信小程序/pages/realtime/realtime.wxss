.container {
    position: relative;
    min-height: 100vh;
    background: url('/images/background.jpg') center/cover no-repeat;
    background-size: cover;
    background-attachment: scroll;
    /* 新增保障性样式 */
    background-color: rgba(255,255,255,0.5); /* 半透明白色遮罩 */
    z-index: 2;
}
/* 增加图片加载检测 */
.container::before {
    content: '背景加载中...';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    display: none; /* 正常情况隐藏 */
}
.container[data-bg-error]::before {
    display: block; /* 图片加载失败时显示 */
}

.back-button {
    background: #79ca86;
    color: white;
    font-weight: bold;
    border-radius: 8rpx;
    box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100px;
    height: 40px;
    margin-top: 20rpx;
}

.popup-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 999;
}

.popup-content {
    width: 80%;
    background: #fff;
    border-radius: 16rpx;
    max-height: 70vh;
}

.popup-header {
    padding: 30rpx;
    font-size: 36rpx;
    text-align: center;
    font-weight: bold;
    border-bottom: 1rpx solid #eee;
}

.intersection-list {
    max-height: 60vh;
}

.list-item {
    padding: 28rpx;
    text-align: center;
    border-bottom: 1rpx solid #f5f5f5;
}

.signal-container {
    margin-top: 40rpx;
}

.section-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
    color: #333;
}

.signal-table {
    background: #fff;
    border-radius: 12rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.table-row {
    display: flex;
}

.table-row.header {
    background: #f5f5f5;
    font-weight: bold;
}

.cell {
    flex: 1;
    padding: 24rpx;
    text-align: center;
    border-bottom: 1rpx solid #eee;
}

.red {
    color: #e64340;
    background: rgba(230, 67, 64, 0.1);
}

.green {
    color: #07c160;
    background: rgba(7, 193, 96, 0.1);
}

.sync-note {
    margin-top: 30rpx;
    padding: 20rpx;
    background: #f9f9f9;
    border-radius: 8rpx;
    font-size: 26rpx;
    color: #666;
    line-height: 1.6;
}

.query-btn {
    background: #0b54a1;
    color: white;
    width: 100%;
    border-radius: 8rpx;
}








