.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    background: #f5f7fa;
    padding: 20rpx;
  }
  
  input {
    width: 80%;
    margin: 16px 0;
    padding: 12px;
    border: 1px solid #dcdfe6;
    border-radius: 6px;
    font-size: 16px;
    background: #fff;
  }
  
  .captcha-container {
    width: 80%;
    display: flex;
    align-items: center;
    margin-bottom: 16px;
  }
  
  .captcha-display {
    width: 120px;
    height: 40px;
    border: 1px solid #dcdfe6;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 10px;
    background: #fff;
    font-size: 24px;
    color: #333;
  }
  
  .captcha-display image {
    width: 100%;
    height: 100%;
  }
  
  button {
    width: 80%;
    margin-top: 20px;
    padding: 12px 0;
    background: #1976d2;
    color: #fff;
    font-size: 16px;
    border-radius: 6px;
    border: none;
  }
  
  button + button {
    background: #fff;
    color: #1976d2;
    border: 1px solid #1976d2;
    margin-top: 10px;
  }